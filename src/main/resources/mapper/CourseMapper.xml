<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.graduation.demo.mapper.CourseMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.graduation.demo.entity.Course">
        <id column="id" property="id" />
        <result column="course_no" property="courseNo" />
        <result column="dept_no" property="deptNo" />
        <result column="name" property="name" />
        <result column="credit" property="credit" />
        <result column="classroom_type" property="classroomType" />
        <result column="is_required" property="isRequired" />
        <result column="test_type" property="testType" />
        <result column="description" property="description" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_no, dept_no, name, credit, classroom_type, is_required, test_type, description
    </sql>

</mapper>
